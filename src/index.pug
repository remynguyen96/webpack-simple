        a.divLess2(class={active: url === 'test'} href=url) /test
        div#demo1(data-test='good')&attributes({'date-test2': 'good2'}).demo2 good
        div#demo2(data-test='good' data-test2='good2').demo2 good2
        - var friends = 0
        case friends
            when 0
                - break
            when 1
                p you have very few friends
            default
                p you have #{friends} friends
        - var arr = ['unit 1','unit 2','unit 3','unit 4']
        ul
        - for (var x = 0; x < arr.length; x++)
            li: a(href=arr[x]) item{x}
        each itemArr in arr
